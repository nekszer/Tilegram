<Application
    x:Class="Tilegram.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tilegram"
    xmlns:LightConverters="using:Light.UWP.MVVM.Converters"
    xmlns:Converters="using:Tilegram.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <LightConverters:ValueToStringConverter x:Key="ValueToStringConverter" />
            <LightConverters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <Converters:AddOneConverter x:Key="AddOneConverter"/>
            <Converters:GreaterThanZeroToVisibilityConverter x:Key="GreaterThanZeroToVisibilityConverter"/>
            <Converters:CommentsCountConverter x:Key="CommentsCountConverter"/>
            <Converters:DateTimeConverter x:Key="DateTimeConverter"/>

            <!-- Icon Button Style -->
            <Style x:Key="IconButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="MinWidth" Value="40"/>
                <Setter Property="MinHeight" Value="40"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- Icon Toggle Button Style -->
            <Style x:Key="IconToggleButtonStyle" TargetType="ToggleButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="MinWidth" Value="40"/>
                <Setter Property="MinHeight" Value="40"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- TextBlock Button Style -->
            <Style x:Key="TextBlockButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="Gray"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Padding" Value="0"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
